<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sel.firstmoilepro"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/CustomActionBarTheme">
        <activity
            android:name="com.sel.firstmoilepro.MainActivity"
            android:label="@string/app_name" 
             >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sel.firstmoilepro.MessageHandleActivity"
            android:label="@string/title_activity_message_handle" 
            android:theme="@style/Theme.AppCompat.Light">
            
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sel.firstmoilepro.MainActivity"/>
            
        </activity>
    </application>

</manifest>
